# Build Stage
FROM golang:1.21-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
# Run go mod tidy to ensure all dependencies (like pgx) are resolved
# even if go.sum is outdated locally
RUN go mod tidy
RUN go mod download
COPY . .
# Build the Lite binary
RUN CGO_ENABLED=0 GOOS=linux go build -o logstream-lite ./lite

# Run Stage
FROM alpine:latest
WORKDIR /root/
COPY --from=builder /app/logstream-lite .
# Render sets PORT env var automatically
CMD ["./logstream-lite"]
